root = true

[*.{kt,kts}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

# Disable function naming rule for Compose functions
ktlint_function-naming = disabled
ktlint_wildcard-import = disabled
ktlint_standard_function-naming = disabled
ktlint_standard_wildcard-import = disabled 